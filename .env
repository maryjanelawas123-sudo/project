# ===================================================
# MCC Lost & Found System - Environment Configuration
# ===================================================

# Application Settings
APP_NAME="MCC Lost & Found"
APP_ENV=development  # development | production
APP_DEBUG=true
APP_URL="http://localhost/lostfound"
APP_TIMEZONE="Asia/Manila"

# Database Configuration
DB_HOST="localhost"
DB_NAME="lostfound"
DB_USER="root"
DB_PASS=""

# Admin Credentials
ADMIN_USER="admin"
ADMIN_PASS="admin123"

# Upload Settings
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_EXTENSIONS="png,jpg,jpeg,gif,heic"
UPLOAD_PATH="./uploads/items/"

# Session Settings
SESSION_LIFETIME=7200  # 2 hours in seconds
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security Settings
CSRF_ENABLED=true
ENCRYPTION_KEY="your-secret-key-here-change-this"

# Email Settings (for password reset)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@mcc.edu"
MAIL_FROM_NAME="MCC Lost & Found"

# QR Code Settings
QR_CODE_SIZE=250
QR_CODE_BASE_URL="http://localhost/lostfound"

# Microsoft OAuth (Optional)
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
AZURE_TENANT_ID=""

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Logging
LOG_LEVEL="debug"  # debug, info, warning, error
LOG_PATH="./logs/"
LOG_MAX_FILES=5

# Maintenance Mode
MAINTENANCE_MODE=false